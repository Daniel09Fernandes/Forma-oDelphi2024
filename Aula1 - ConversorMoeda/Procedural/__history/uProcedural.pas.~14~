{ TConversorMoeda }

function TConversorMoeda.ConverterDolarParaReal(ADolar: double): double;
begin
  Result := ADolar / COTACAO_DOLAR;
end;

function TConversorMoeda.ConverterRealParaDolar(AReal: double): double;
begin
  Result := AReal * COTACAO_DOLAR;
end;

end.
